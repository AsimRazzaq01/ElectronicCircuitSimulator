<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefWidth="800" prefHeight="600"
            stylesheets="@cssStyles/style.css"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.demo2.LandingPageController">

    <!-- Top Bar now anchored left/right/top -->
    <HBox fx:id="topBar"
          layoutY="0"
          AnchorPane.topAnchor="0"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0"
          prefHeight="60"
          spacing="10"
          alignment="CENTER_LEFT"
          styleClass="top-bar">
        <padding>
            <Insets top="10" bottom="10" left="20" right="20"/>
        </padding>

        <!-- Welcome label -->
        <Label fx:id="welcomeLabel"
               text="Welcome Back, User!"
               styleClass="headline"/>

        <!-- spacer -->
        <Region HBox.hgrow="ALWAYS"/>

        <!-- logout -->
        <Button fx:id="logoutButton"
                text="ðŸšª Log Out"
                onAction="#logout"
                styleClass="secondary-btn"/>
    </HBox>

    <!-- Main content below -->
    <VBox layoutX="20" layoutY="80"
          AnchorPane.leftAnchor="20"
          AnchorPane.rightAnchor="20"
          AnchorPane.bottomAnchor="20"
          spacing="20"
          styleClass="center-container">

        <ScrollPane fitToWidth="true" prefHeight="400" styleClass="project-scroll">
            <VBox fx:id="projectListVBox" spacing="10">
                <padding>
                    <Insets top="10" right="20" bottom="10" left="20"/>
                </padding>
            </VBox>
        </ScrollPane>

        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="newProjectButton"
                    text="âž• New Project"
                    onAction="#openNewProject"
                    styleClass="primary-btn"/>
            <Button fx:id="settingsButton"
                    text="âš™ Settings"
                    onAction="#openSettings"
                    styleClass="primary-btn"/>
        </HBox>

    </VBox>

</AnchorPane>
